<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AzmoonProject" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navigationTheme">-->
        <item name="colorPrimary">@color/color_orange</item>
        <item name="colorControlHighlight">@color/color_orange</item>
    </style>

    <style name="RobotoTextViewStyle">
        <item name="android:fontFamily">@font/vazir_medium</item>
    </style>

</resources>


