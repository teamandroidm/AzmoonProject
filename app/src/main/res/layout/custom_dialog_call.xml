<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background_button_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vazir_bold"
            android:paddingTop="12dp"
            android:text="تماس با ما "
            android:textColor="@color/color_black"
            android:textSize="20sp"
            />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/vazir_light"
        android:gravity="right|top"
        android:justificationMode="inter_word"
        android:text="آدرس:
ملایر.خ شهید طلوعی.ابتدای خسروی.جنب گل فروشی\n
تلفن
۳۲۲۲۴۶۰۷\n
همراه
۰۹۱۸۳۵۱۹۷۰۲\n
بامدیریت :خانم بیاتی اصل"
        android:lineSpacingExtra="3dp"
        android:textColor="@color/color_gray_dark"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        android:paddingBottom="15dp"
       />

</ScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:gravity="center">

        <Button
            android:id="@+id/custom_dialog_button_ok3"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/background_button_dialog_orange"
            android:clickable="true"
            android:fontFamily="@font/vazir"
            android:text="تایید "
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
