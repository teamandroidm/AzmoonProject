<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_courses_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/background_list_courses"
    android:layoutDirection="rtl"
    android:orientation="horizontal"

    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2.5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_courses_image_courses"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/logocourses" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7.5"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_marginRight="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vazir_bold"
                android:text="دوره آموزشی"
                android:textColor="@color/color_black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/activity_courses_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vazir_bold"
                android:text="ICDL "
                android:textColor="@color/color_black"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            android:layout_marginRight="8dp">


            <TextView
                android:id="@+id/activity_courses_text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vazir_bold"
                android:text=" ۳۰,۰۰۰ "
                android:textColor="@color/color_orange"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vazir_medium"
                android:text=" تومان"
                android:textColor="@color/color_black"
                android:textSize="12sp" />


        </LinearLayout>
        <Button
            android:id="@+id/activity_courses_button_cart"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/background_button"
            android:fontFamily="@font/vazir_bold"
            android:gravity="center"
            android:text="سبد خرید"
            android:textColor="@color/color_white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/activity_courses_layout_validity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_button1"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/vazir_light"
                android:gravity="center"
                android:padding="5dp"
                android:text="زمان باقی مانده"
                android:textColor="@color/color_black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/activity_courses_text_validity"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:fontFamily="@font/vazir_bold"
                android:text=" ۱۴ "
                android:textColor="@color/color_orange"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:fontFamily="@font/vazir_light"
                android:text="روز"
                android:textColor="@color/color_black"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

