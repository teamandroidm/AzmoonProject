<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@drawable/dialog_layout"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vazir_bold"
        android:paddingTop="12dp"
        android:paddingHorizontal="18dp"
        android:text="تغییر رمز عبور"
        android:textColor="@color/color_black"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_dialog_activity_profile_change_pass_edtla_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginVertical="12dp"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/color_purple"
        android:hint="رمز فعلی"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/custom_dialog_activity_profile_change_pass_edt_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:inputType="textPassword"
            android:fontFamily="@font/vazir_light"
             />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_dialog_activity_profile_change_pass_edtla_newpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="12dp"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/color_purple"
        android:hint="رمز جدید"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/custom_dialog_activity_profile_change_pass_edt_newpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:inputType="textPassword"
            android:fontFamily="@font/vazir_light"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_dialog_activity_profile_change_pass_edtla_newpass_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="12dp"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:textColorHint="@color/color_purple"
        android:hint="تکرار رمز جدید"
        android:fontFamily="@font/vazir_light"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/custom_dialog_activity_profile_change_pass_edt_newpass_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="18dp"

        >
        <Button
            android:id="@+id/custom_dialog_activity_profile_change_pass_btn_yes"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_layout"
            android:backgroundTint="@color/color_orange"
            android:fontFamily="@font/vazir"
            android:layout_marginLeft="18dp"
            android:text="تغییر رمز عبور"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/custom_dialog_activity_profile_change_pass_btn_no"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_layout"
            android:backgroundTint="@color/color_gray"
            android:fontFamily="@font/vazir"
            android:text="انصراف"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            />
    </LinearLayout>

</LinearLayout>